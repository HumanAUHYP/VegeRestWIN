@using CoreLibrary
@model Menu

<div class="row justify-content-lg-cehter">
    <h1>Изменить информацию</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Change">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id блюда: @Model.Id</label>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" value="@Model.Name" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" value="@Model.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Ссылка на картинку</label>
                <input asp-for="Image" value="@Model.Image" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" value="@Model.Price" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к меню</a>
</div>


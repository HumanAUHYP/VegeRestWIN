@model CoreLibrary.Client

<div class="row justify-content-lg-cehter">
    <h1>Введите свое имя и номер стола, за которым сидите</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveClient">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TableNum" class="control-label">Номер стола</label>
                <input asp-for="TableNum" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Открыть меню" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>
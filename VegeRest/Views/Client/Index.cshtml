@using CoreLibrary;
@model List<Menu>

<h2>Menu</h2>

<br />

<div class="row">
    @foreach (var order in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="card-title text-center">
                        <a>@order.Name</a>
                    </h2>
                    <div>
                        <p class="font-weight-normal">@order.Description</p>
                    </div>
                    <div>
                        <img class="card-img-top" src="@order.Image" />
                    </div>
                    <div>
                        <p class="font-weight-normal">Cost @order.Price $</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
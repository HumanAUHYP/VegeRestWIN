@using CoreLibrary
@model Order

<div class="row justify-content-lg-cehter">
    <h1>Изменение сервировки заказа</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Change">
            <input type="hidden" asp-for="ClientId" value="@ClientStorage.Clients[0].Id" />
            <input type="hidden" asp-for="MenuId" value="@Model.MenuId" />
            <input type="hidden" asp-for="Name" value="@Model.Name" />
            <input type="hidden" asp-for="Price" value="@Model.Price" />
            <input type="hidden" asp-for="Image" value="@Model.Image" />
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id заказа: @Model.Id</label>
            </div>
            <div class="form-group">
                <label class="control-label">Вариант готовки</label>
                <select asp-for="CookingOption" class="form-control">
                    @foreach (var option in CookingOptions.Options)
                    {
                        <option>@option.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Вариант нарезки</label>
                <select asp-for="CuttingOption" class="form-control">
                    @foreach (var option in CuttingOptions.Options)
                    {
                        <option>@option.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label">Количесво</label>
                <input asp-for="Count" value="@Model.Count" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Order">Вернуться к заказу</a>
</div>

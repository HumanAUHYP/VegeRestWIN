@using CoreLibrary;
@model List<Menu>

<h2>Menu</h2>

<br />

<div class="row">
    @foreach (var menu in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="card-title text-center">
                        <a>@menu.Name</a>
                    </h2>
                    <div>
                        <p class="font-weight-normal">@menu.Description</p>
                    </div>
                    <div>
                        <img class="card-img-top" src="@menu.Image" />
                    </div>
                    <div>
                        <p class="font-weight-normal">Cost @menu.Price $</p>
                    </div>
                    <a class="btn btn-primary" asp-controller="Client"
                       asp-action="Options" asp-route-id="@menu.Id"
                       role="button">
                        Custumize options
                    </a>
                </div>
            </div>
        </div>
    }
</div>